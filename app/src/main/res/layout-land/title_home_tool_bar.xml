<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_height="60dp"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@color/color_white"
        android:weightSum="1.0"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/jio_logo"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="0dp"
            android:text="Merchant Name : Santhosh"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/color_merchant"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:text="20, Sep, 2010"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/color_black"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/color_bg_title" />
        <TextView
            android:layout_width="0dp"
            android:text="10:00 AM"
            android:layout_weight="0.1"
            android:gravity="left"
            android:textSize="18sp"
            android:textColor="@color/color_time"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/ic_notifications_button_with_label"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_weight="0.15"
            android:layout_gravity="center"
            android:text="English"
            android:textColor="@color/color_black"
            android:drawableRight="@drawable/ic_arrow_down"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_weight="0.15"
            android:layout_gravity="center"
            android:text="Saravanan"
            android:textColor="@color/color_black"
            android:drawableRight="@drawable/ic_arrow_down"
            android:layout_height="40dp" />
        <Spinner
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_weight="0.15"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="40dp" />
        <Spinner
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_weight="0.15"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/avatar"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_bg_title" />


</android.support.v7.widget.Toolbar>