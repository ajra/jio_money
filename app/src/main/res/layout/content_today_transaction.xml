<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:id="@+id/linear_Layout_value">
        <View
            android:layout_width="1dp"
            android:background="@color/color_bg_title"
            android:layout_height="37dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sno_text_view"
            android:text=""
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.5"/>
        <View
            android:layout_width="1dp"
            android:background="@color/color_bg_title"
            android:layout_height="37dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/my_order_text_view"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=""
            android:layout_weight="1.175"/>
        <View
            android:layout_width="1dp"
            android:background="@color/color_bg_title"
            android:layout_height="37dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_image_view"
            android:layout_weight="0.8"
            android:background="@mipmap/crop__ic_done"
            android:gravity="center"
            android:layout_gravity="center"/>
        <View
            android:layout_width="1dp"
            android:background="@color/color_bg_title"
            android:layout_height="37dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/in_process_image_view"
            android:layout_weight="1.175"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@mipmap/crop__ic_done"/>
        <View
            android:layout_width="1dp"
            android:background="@color/color_bg_title"
            android:layout_height="37dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delivery_image_view"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1.175"
            android:background="@mipmap/crop__ic_done"/>
        <View
            android:layout_width="1dp"
            android:background="@color/color_bg_title"
            android:layout_height="37dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/canceled_image_view"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1.175"
            android:background="@mipmap/crop__ic_done"/>
        <View
            android:layout_width="1dp"
            android:background="@color/color_bg_title"
            android:layout_height="37dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/color_bg_title"
        android:layout_height="1dp">

    </View>
</LinearLayout>
