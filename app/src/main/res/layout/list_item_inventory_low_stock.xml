<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/supplier_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="0.4">

        <View style="@style/style_inventory_line_view" />

        <TextView
            android:id="@+id/product_name_text_view"
            style="@style/style_low_stock_item_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Product" />

        <View style="@style/style_inventory_line_view" />

        <TextView
            android:id="@+id/qty_text_view"
            style="@style/style_low_stock_item_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:text="Qty" />

        <View style="@style/style_inventory_line_view" />

        <TextView
            android:id="@+id/selling_details_text_view"
            style="@style/style_low_stock_item_selling_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="See Details and Order"
            android:layout_weight="0.1" />

        <View style="@style/style_inventory_line_view" />
    </LinearLayout>
    <View
        style="@style/style_inventory_bottom_line_view"/>

</LinearLayout>